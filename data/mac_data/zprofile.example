eval "$(/opt/homebrew/bin/brew shellenv)"
fastfetch

echo
# Print welcome message and capitalize the first letter of the username.
echo "Welcome, ${(C)USER}! Remember to update you brew installations! (brewup)"
echo

alias git-update='git checkout main && git pull origin main && git checkout develop && git pull origin develop'
alias git-merge='git checkout main && git pull origin main && git merge main develop && git push origin main && git checkout develop'
alias brewup='brew update && brew upgrade'
alias cleanup='brew cleanup'
alias brewlist='brew list | tee brew_packages_$(date +%d%b%Y_%HH_%MM_%Ss).txt'
alias ss="sudo lsof -iTCP -iUDP -n -P"
